#!/usr/bin/env bash

WORDS="/usr/share/dict/words"
SESSION_NAME=""

if [ -f $WORDS ];
then
    NAME="$(shuf -n1 $WORDS)"
    NAME=${NAME,,}
    NAME=${NAME%%\'*}
    NAME=${NAME%%er}
    NAME=${NAME%%ed}
    NAME=${NAME%%ing}
    NAME=${NAME%%er}
    NAME=${NAME%%ally}
    NAME=${NAME%%tly}
    NAME=${NAME%%ous}
    NAME=${NAME%%ism}
    NAME=${NAME:0:8}
    if [[ "$NAME" == '' ]]; then
        NAME="fallback"
    fi
    SESSION_NAME="-s"_$NAME""
fi

alacritty -e tmux -u new-session "$SESSION_NAME" "$@"
