#!/usr/bin/env sh
# ssh-add -D
echo "`date`: SUSPEND" >> ~/.log/onoff

dbus-send --system --print-reply \
    --dest="org.freedesktop.UPower" \
    /org/freedesktop/UPower \
    org.freedesktop.UPower.AboutToSleep

i3lock -c E17800 && \
dbus-send --system --print-reply \
    --dest="org.freedesktop.UPower" \
    /org/freedesktop/UPower \
    org.freedesktop.UPower.Suspend

echo "`date`: UNSUSPEND" >> ~/.log/onoff
