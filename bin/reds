#!/usr/bin/env bash

# Usage: $(basename $0) [night time color value] [brightness]
# daytime-color: 6500
# night-time default color: 3700
# brightness default: 1.00

color="4900"
brightness="1.0"

linkoping="58.411975:15.559395"
shenzhen="22.543099:114.057868"

if [ $# -gt 0 ] ; then
    color="$1"
fi

if [ $# -gt 1 ] ; then
    brightness="$2"
fi

redshift -l $shenzhen -t "6500:$color" -b "$brightness" &
