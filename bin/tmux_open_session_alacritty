#!/usr/bin/env bash

if [[ -f $HOME/.dmenurc ]]; then
    . $HOME/.dmenurc
else
    DMENU='dmenu -i'
fi

if [[ -f $HOME/.tmux/attach.list ]]; then
    . $HOME/.tmux/attach.list
fi

tmux_run="$(tmux list-sessions -F '#S')"

prompt="attach-local:"

spawn_local() {
    alacritty -e tmux -u attach -d -t "$1"
}
target=$(echo $tmux_run | sed 's/ /\n/g' | ${DMENU} -p "$prompt")

if [[ -n $target ]]; then
    spawn_local $target
fi
